@model Mission06_Briggs.Models.Movie

@{
    ViewData["Title"] = "Delete Movie";
}

<div class="container">
    <h1>Delete Movie</h1>

    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this movie?</h4>
    </div>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model.Title (@Model.Year)</h5>

            <dl class="row">
                <dt class="col-sm-3">Director</dt>
                <dd class="col-sm-9">@Model.Director</dd>

                <dt class="col-sm-3">Rating</dt>
                <dd class="col-sm-9">@Model.Rating</dd>

                <dt class="col-sm-3">Category</dt>
                <dd class="col-sm-9">@Model.Category?.CategoryName</dd>

                <dt class="col-sm-3">Edited</dt>
                <dd class="col-sm-9">@(Model.Edited == 1 ? "Yes" : "No")</dd>

                <dt class="col-sm-3">Copied to Plex</dt>
                <dd class="col-sm-9">@(Model.CopiedToPlex == 1 ? "Yes" : "No")</dd>

                @if (!string.IsNullOrEmpty(Model.LentTo))
                {
                    <dt class="col-sm-3">Lent To</dt>
                    <dd class="col-sm-9">@Model.LentTo</dd>
                }

                @if (!string.IsNullOrEmpty(Model.Notes))
                {
                    <dt class="col-sm-3">Notes</dt>
                    <dd class="col-sm-9">@Model.Notes</dd>
                }
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="MovieId" />
        <button type="submit" class="btn btn-danger">Yes, Delete It</button>
        <a asp-action="Movies" class="btn btn-secondary">Cancel</a>
    </form>
</div>