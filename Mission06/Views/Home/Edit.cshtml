@model Mission06_Briggs.Models.Movie

@{
    ViewData["Title"] = "Edit Movie";
}

<div class="container">
    <h1>Edit Movie</h1>

    <form method="post">
        <!-- Hidden field to preserve the MovieId -->
        <input type="hidden" asp-for="MovieId" />

        <!-- Validation Summary -->
        <div asp-validation-summary="All" class="text-danger"></div>

        <!-- Title -->
        <div class="mb-3">
            <label asp-for="Title" class="form-label">Title</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <!-- Year -->
        <div class="mb-3">
            <label asp-for="Year" class="form-label">Year</label>
            <input asp-for="Year" class="form-control" type="number" />
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>

        <!-- Director -->
        <div class="mb-3">
            <label asp-for="Director" class="form-label">Director</label>
            <input asp-for="Director" class="form-control" />
            <span asp-validation-for="Director" class="text-danger"></span>
        </div>

        <!-- Rating -->
        <div class="mb-3">
            <label asp-for="Rating" class="form-label">Rating</label>
            <select asp-for="Rating" class="form-control">
                <option value="">-- Select Rating --</option>
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
            </select>
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>

        <!-- Category -->
        <div class="mb-3">
            <label asp-for="CategoryId" class="form-label">Category</label>
            <select asp-for="CategoryId" class="form-control">
                <option value="">-- Select Category --</option>
                @foreach (var category in ViewBag.Categories)
                {
                    <option value="@category.CategoryId">@category.CategoryName</option>
                }
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <!-- Edited -->
        <div class="mb-3">
            <label asp-for="Edited" class="form-label">Edited</label>
            <select asp-for="Edited" class="form-control">
                <option value="0">No</option>
                <option value="1">Yes</option>
            </select>
            <span asp-validation-for="Edited" class="text-danger"></span>
        </div>

        <!-- Copied to Plex -->
        <div class="mb-3">
            <label asp-for="CopiedToPlex" class="form-label">Copied to Plex</label>
            <select asp-for="CopiedToPlex" class="form-control">
                <option value="0">No</option>
                <option value="1">Yes</option>
            </select>
            <span asp-validation-for="CopiedToPlex" class="text-danger"></span>
        </div>

        <!-- Lent To -->
        <div class="mb-3">
            <label asp-for="LentTo" class="form-label">Lent To (Optional)</label>
            <input asp-for="LentTo" class="form-control" />
        </div>

        <!-- Notes -->
        <div class="mb-3">
            <label asp-for="Notes" class="form-label">Notes (Max 25 characters)</label>
            <input asp-for="Notes" class="form-control" maxlength="25" />
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-action="Movies" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}